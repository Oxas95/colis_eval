package task

import "fmt"

type SameTaskIdError int

func (e SameTaskIdError) Error() string {
	return fmt.Sprintf("Unable to create a task with an already used task ID : %v", e)
}

type TaskStorageError string

func (e TaskStorageError) Error() string {
	return fmt.Sprintf("Unable to contact task persistance service : %v" e)
}